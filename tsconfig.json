  "compilerOptions": {
    "target": "es5",
    "lib": ["es2020"],
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "typings/**/*.ts"
  ]
}